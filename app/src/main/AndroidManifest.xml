<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lwt_recipeapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/recipe_ic_launcher"
        android:roundIcon="@mipmap/recipe_ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".View.RecipeDetail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".View.MainScreen"
            android:label="LWT_RecipeApp"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.Recipe_Add"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Controller.Recipe_Edit"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>